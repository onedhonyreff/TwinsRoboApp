<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.HomeFragment">

    <ScrollView
        android:id="@+id/skrol"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appBarMain"
        android:layout_above="@+id/btmNavMain">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="vertical"
                android:background="@drawable/oval"
                android:gravity="center|top">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/logo_twins_robo_transparant" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Welcome"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/msmedium"
                    android:textSize="15sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/tvUserNamaDepan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Admin"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/mssemibold"
                    android:textSize="18sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <GridLayout
                android:columnCount="2"
                android:rowCount="3"
                android:alignmentMode="alignMargins"
                android:columnOrderPreserved="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="-80dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvProgramRobot"
                    android:layout_width="10dp"
                    android:layout_height="160dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardElevation="6dp"
                    app:cardCornerRadius="12dp"
                    android:layout_margin="12dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:orientation="vertical"
                        android:paddingVertical="16dp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_card_item">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitCenter"
                            android:layout_marginHorizontal="20dp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/robot1"
                            android:layout_weight="1" />

                        <TextView
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginTop="12dp"
                            android:textSize="12sp"
                            android:textColor="#6f6f6f"
                            android:text="Pemrogram Robot's"
                            android:textAlignment="center"
                            android:fontFamily="@font/msmedium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvCheckMyRobot"
                    android:layout_width="10dp"
                    android:layout_height="160dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardElevation="6dp"
                    app:cardCornerRadius="12dp"
                    android:layout_margin="12dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:orientation="vertical"
                        android:paddingVertical="16dp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_card_item">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="20dp"
                            android:scaleType="fitCenter"
                            android:adjustViewBounds="true"
                            android:src="@drawable/setting_menu"
                            android:layout_weight="1" />

                        <TextView
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginTop="12dp"
                            android:textSize="12sp"
                            android:textColor="#6f6f6f"
                            android:text="Check My Robot's"
                            android:textAlignment="center"
                            android:fontFamily="@font/msmedium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvMiniGames"
                    android:layout_width="10dp"
                    android:layout_height="160dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardElevation="6dp"
                    app:cardCornerRadius="12dp"
                    android:layout_margin="12dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:orientation="vertical"
                        android:paddingVertical="16dp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_card_item">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitCenter"
                            android:layout_marginHorizontal="20dp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/mini_game_menu"
                            android:layout_weight="1" />

                        <TextView
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginTop="12dp"
                            android:textSize="12sp"
                            android:textColor="#6f6f6f"
                            android:text="Mini Games"
                            android:textAlignment="center"
                            android:fontFamily="@font/msmedium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvInfoLombaRobot"
                    android:layout_width="10dp"
                    android:layout_height="160dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardElevation="6dp"
                    app:cardCornerRadius="12dp"
                    android:layout_margin="12dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:orientation="vertical"
                        android:paddingVertical="16dp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_card_item">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="20dp"
                            android:scaleType="fitCenter"
                            android:adjustViewBounds="true"
                            android:src="@drawable/info_menu"
                            android:rotation="-15"
                            android:layout_weight="1" />

                        <TextView
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginTop="12dp"
                            android:textSize="12sp"
                            android:textColor="#6f6f6f"
                            android:text="Info Lomba Robot"
                            android:textAlignment="center"
                            android:fontFamily="@font/msmedium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvLearnRobot"
                    android:layout_width="10dp"
                    android:layout_height="160dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardElevation="6dp"
                    app:cardCornerRadius="12dp"
                    android:layout_margin="12dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:orientation="vertical"
                        android:paddingVertical="16dp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_card_item">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitCenter"
                            android:layout_marginHorizontal="20dp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/learn_menu"
                            android:layout_weight="1" />

                        <TextView
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginTop="12dp"
                            android:textSize="12sp"
                            android:textColor="#6f6f6f"
                            android:text="Learn Robot's"
                            android:textAlignment="center"
                            android:fontFamily="@font/msmedium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvAboutUs"
                    android:layout_width="10dp"
                    android:layout_height="160dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardElevation="6dp"
                    app:cardCornerRadius="12dp"
                    android:layout_margin="12dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:orientation="vertical"
                        android:paddingVertical="16dp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_card_item">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="20dp"
                            android:scaleType="fitCenter"
                            android:adjustViewBounds="true"
                            android:src="@drawable/about_menu"
                            android:layout_weight="1" />

                        <TextView
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginTop="12dp"
                            android:textSize="12sp"
                            android:textColor="#6f6f6f"
                            android:text="About Us"
                            android:textAlignment="center"
                            android:fontFamily="@font/msmedium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </GridLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:paddingVertical="15dp"
                android:paddingHorizontal="10dp"
                android:minHeight="200dp"
                android:background="#20A7F9">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Championship Leader"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/mssemibold"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textAlignment="center"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvListChampion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    tools:listitem="@layout/championship_leader_item"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>