<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.UserProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginTop="-40dp"
                android:background="@drawable/oval"
                android:orientation="vertical"
                android:paddingHorizontal="15dp"
                android:layout_marginBottom="10dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Profile"
                        android:textColor="#FFFFFF"
                        android:fontFamily="@font/mssemibold"
                        android:textSize="22sp"
                        android:textStyle="normal"
                        android:layout_marginBottom="5dp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llFailLoadProfil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="50dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/ivFailImageProfil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/fail_cloud"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#777777"
                    android:text="Failed To Load Data"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:fontFamily="@font/mssemibold"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llSuccessLoadProfil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginTop="2dp"
                    android:elevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginVertical="15dp"
                        android:layout_marginHorizontal="19dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="2" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.2">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:adjustViewBounds="true"
                                    android:src="@drawable/ic_account_circle"
                                    android:scaleType="centerCrop"
                                    android:visibility="invisible" />

                                <ImageView
                                    android:id="@+id/ivFotoProfil"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:adjustViewBounds="true"
                                    android:src="@drawable/anim_loading"
                                    android:scaleType="centerCrop" />

                                <ImageView
                                    android:id="@+id/ivVipBadge"
                                    android:layout_width="55dp"
                                    android:layout_height="wrap_content"
                                    android:adjustViewBounds="true"
                                    android:layout_alignParentRight="true"
                                    android:layout_alignParentBottom="true"
                                    android:src="@drawable/vip_badge2"
                                    android:visibility="invisible"/>

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="2">

                                <LinearLayout
                                    android:id="@+id/llEditProfile"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_alignParentTop="true"
                                    android:layout_alignParentRight="true"
                                    android:padding="5dp"
                                    android:foreground="?attr/selectableItemBackground"
                                    android:focusable="true"
                                    android:clickable="true">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="#0094EF"
                                        android:text="Edit"
                                        android:layout_gravity="center"
                                        android:fontFamily="@font/mssemibold"
                                        android:textSize="15sp" />

                                    <ImageView
                                        android:layout_width="25dp"
                                        android:layout_height="wrap_content"
                                        android:adjustViewBounds="true"
                                        android:layout_marginLeft="5dp"
                                        android:src="@drawable/ic_edit" />
                                </LinearLayout>
                            </RelativeLayout>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvNamaProfil"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Memuat..."
                            android:textSize="25sp"
                            android:textColor="#555555"
                            android:textAlignment="center"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/mssemibold" />

                        <TextView
                            android:id="@+id/tvNamaSekolahProfil"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Memuat..."
                            android:textSize="15sp"
                            android:textAlignment="center"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="10dp"
                            android:fontFamily="@font/mssemibold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="3.3" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:paddingVertical="10dp"
                                android:orientation="vertical">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:elevation="4dp"
                                    app:cardElevation="4dp"
                                    android:layout_margin="4dp"
                                    app:cardCornerRadius="5dp">
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="8dp">
                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_weight="4"
                                            android:src="@drawable/ic_person"
                                            android:scaleType="centerInside"/>
                                        <TextView
                                            android:id="@+id/tvUsernameProfil"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:paddingHorizontal="15dp"
                                            android:paddingVertical="8dp"
                                            android:hint="Memuat..."
                                            android:textSize="13sp"
                                            android:fontFamily="@font/msmedium"/>
                                    </LinearLayout>
                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:elevation="4dp"
                                    app:cardElevation="4dp"
                                    android:layout_margin="4dp"
                                    app:cardCornerRadius="5dp">
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="8dp">
                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_weight="4"
                                            android:src="@drawable/ic_email"
                                            android:scaleType="centerInside"/>
                                        <TextView
                                            android:id="@+id/tvEmailProfil"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:paddingHorizontal="15dp"
                                            android:paddingVertical="8dp"
                                            android:hint="Memuat..."
                                            android:textSize="13sp"
                                            android:fontFamily="@font/msmedium"/>
                                    </LinearLayout>
                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:elevation="4dp"
                                    app:cardElevation="4dp"
                                    android:layout_margin="4dp"
                                    app:cardCornerRadius="5dp">
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="8dp">
                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_weight="4"
                                            android:src="@drawable/ic_people"
                                            android:scaleType="centerInside"/>
                                        <TextView
                                            android:id="@+id/tvAgeProfil"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:paddingHorizontal="15dp"
                                            android:paddingVertical="8dp"
                                            android:hint="Memuat..."
                                            android:textSize="13sp"
                                            android:fontFamily="@font/msmedium"/>
                                    </LinearLayout>
                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:elevation="4dp"
                                    app:cardElevation="4dp"
                                    android:layout_margin="4dp"
                                    app:cardCornerRadius="5dp">
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="8dp">
                                        <ImageView
                                            android:id="@+id/ivIconGenderProfil"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_weight="4"
                                            android:src="@drawable/ic_male"
                                            android:scaleType="centerInside"/>
                                        <TextView
                                            android:id="@+id/tvGenderProfil"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:paddingHorizontal="15dp"
                                            android:paddingVertical="8dp"
                                            android:hint="Memuat Gender..."
                                            android:textSize="13sp"
                                            android:fontFamily="@font/msmedium"/>
                                    </LinearLayout>
                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:elevation="4dp"
                                    app:cardElevation="4dp"
                                    android:layout_margin="4dp"
                                    app:cardCornerRadius="5dp">
                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="8dp">
                                        <ImageView
                                            android:id="@+id/ivQrCodeUser"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:adjustViewBounds="true"
                                            android:scaleType="fitCenter"/>
                                    </RelativeLayout>
                                </androidx.cardview.widget.CardView>

                            </LinearLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="3.3" />
                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:id="@+id/llLogOut"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/red_selected"
                    android:padding="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="24dp"
                    android:foreground="@drawable/btn_ripple_effect_low_radius"
                    android:focusable="true"
                    android:clickable="true"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LOG OUT"
                        android:textColor="#FFFFFF"
                        android:fontFamily="@font/mssemibold"
                        android:textSize="14sp"/>
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_logout"
                        android:layout_marginHorizontal="10dp"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <ProgressBar
        android:id="@+id/pbProfileFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminateDrawable="@drawable/custom_progress_bar_4"
        android:indeterminateDuration="@integer/material_motion_duration_long_2"
        android:visibility="gone"/>

</RelativeLayout>