<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cvInfoLombaItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="4dp"
    android:elevation="8dp"
    app:cardCornerRadius="5dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:layout_marginVertical="6dp"
    android:layout_marginHorizontal="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivPamflet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:layout_weight="1.65"
                android:src="@drawable/banner_lomba"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/tv_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Id Laundry"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvJudulLomba"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:textSize="15sp"
                    android:fontFamily="@font/mssemibold"
                    android:hint="Super Lomba Robotik Nasional 2021" />

                <TextView
                    android:id="@+id/tvDeskripsi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:textSize="9sp"
                    android:hint="Dengan bangga Rotary Club of Surabaya Persada mengadakan Lomba Robotika
Nasional ke 2 tahun 2021 yg akan diselenggarakan pada tanggal *27-28 Maret 2021*.
Piagam pemenang tandatangan Gubernur Jawa Timur."
                    android:fontFamily="@font/msmedium"
                    android:justificationMode="inter_word"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="4dp">

                    <Button
                        android:id="@+id/btnCatSumoRc"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:paddingHorizontal="10dp"
                        android:layout_marginHorizontal="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/blue_selected"
                        android:textColor="#FFFFFF"
                        android:fontFamily="@font/msmedium"
                        android:text="Sumo RC"
                        android:textSize="8sp"
                        android:textAllCaps="false" />

                    <Button
                        android:id="@+id/btnCatMazeSolving"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:paddingHorizontal="10dp"
                        android:layout_marginHorizontal="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/blue_selected"
                        android:textColor="#FFFFFF"
                        android:fontFamily="@font/msmedium"
                        android:text="Maze Solving"
                        android:textSize="8sp"
                        android:textAllCaps="false" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="4dp">

                    <Button
                        android:id="@+id/btnCatTransporter"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:paddingHorizontal="10dp"
                        android:layout_marginHorizontal="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/blue_selected"
                        android:textColor="#FFFFFF"
                        android:fontFamily="@font/msmedium"
                        android:text="Transporter"
                        android:textSize="8sp"
                        android:textAllCaps="false" />

                    <Button
                        android:id="@+id/btnCatDroneRace"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:paddingHorizontal="10dp"
                        android:layout_marginHorizontal="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/blue_selected"
                        android:textColor="#FFFFFF"
                        android:fontFamily="@font/msmedium"
                        android:text="Drone Race"
                        android:textSize="8sp"
                        android:textAllCaps="false" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="4dp">

                    <Button
                        android:id="@+id/btnCatUnderWater"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:paddingHorizontal="10dp"
                        android:layout_marginHorizontal="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/blue_selected"
                        android:textColor="#FFFFFF"
                        android:fontFamily="@font/msmedium"
                        android:text="Underwater"
                        android:textSize="8sp"
                        android:textAllCaps="false" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_imageString"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="image_string"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="8dp">

            <TextView
                android:id="@+id/tvDurasiTanggal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/llViewAndShare"
                android:paddingHorizontal="20dp"
                android:textSize="10sp"
                android:hint="27-28 Maret 2021"
                android:fontFamily="@font/msmedium"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true" />

            <LinearLayout
                android:id="@+id/llViewAndShare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="8dp">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/ic_share" />

                <TextView
                    android:id="@+id/tvNumberOfShares"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/msmedium"
                    android:textSize="10sp"
                    android:hint="100"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center" />

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/ic_eye" />

                <TextView
                    android:id="@+id/tvNumberOfViews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/msmedium"
                    android:textSize="10sp"
                    android:hint="1000"
                    android:layout_gravity="center" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>








