<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llRoboPlan"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RobotPlanActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0094EF"
        android:paddingHorizontal="15dp"
        android:paddingVertical="15dp">

        <ImageView
            android:id="@+id/ivBackArrowRP"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_arrow_back"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Twins Robo App"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/mssemibold"
            android:textSize="18sp"
            android:textStyle="normal"
            android:textAlignment="center" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_notifications"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginTop="-40dp"
                android:background="@drawable/oval"
                android:orientation="vertical"
                android:paddingHorizontal="15dp"
                android:layout_marginBottom="10dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Robot Plan"
                        android:textColor="#FFFFFF"
                        android:fontFamily="@font/mssemibold"
                        android:textSize="22sp"
                        android:textStyle="normal"
                        android:layout_marginBottom="5dp" />

                </LinearLayout>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="2dp"
                android:elevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginVertical="15dp"
                    android:layout_marginHorizontal="19dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Order Of The Robot Plan"
                        android:textSize="15sp"
                        android:textAlignment="center"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="20dp"
                        android:fontFamily="@font/mssemibold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginVertical="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_weight="5">

                                    <LinearLayout
                                        android:id="@+id/llDecrementPlan"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:layout_gravity="right"
                                        android:background="@drawable/input_field"
                                        android:foreground="@drawable/btn_ripple_effect_low_radius"
                                        android:clickable="true"
                                        android:focusable="true"
                                        android:gravity="center"
                                        android:elevation="3dp"
                                        android:layout_margin="4dp">

                                        <ImageView
                                            android:layout_width="22dp"
                                            android:layout_height="22dp"
                                            android:scaleType="fitXY"
                                            android:layout_margin="5dp"
                                            android:src="@drawable/ic_left_slide" />
                                    </LinearLayout>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal"
                                    android:layout_weight="3">

                                    <TextView
                                        android:id="@+id/tvPlanSelector"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:fontFamily="@font/mssemibold"
                                        android:textAlignment="center"
                                        android:text="Plan 1" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_weight="5">

                                    <LinearLayout
                                        android:id="@+id/llIncrementPlan"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:layout_gravity="left"
                                        android:background="@drawable/input_field"
                                        android:foreground="@drawable/btn_ripple_effect_low_radius"
                                        android:clickable="true"
                                        android:focusable="true"
                                        android:gravity="center"
                                        android:elevation="3dp"
                                        android:layout_margin="4dp">

                                        <ImageView
                                            android:layout_width="22dp"
                                            android:layout_height="22dp"
                                            android:scaleType="fitXY"
                                            android:layout_margin="5dp"
                                            android:src="@drawable/ic_right_slide"/>
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginVertical="20dp">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1.5" />

                                <ImageView
                                    android:id="@+id/ivAnimRoboPlan"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:adjustViewBounds="true"
                                    android:src="@drawable/giphy"
                                    android:layout_weight="1" />

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1.5" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginVertical="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="-20dp"
                                android:background="@drawable/bg_top_rounded"
                                android:fontFamily="@font/msmedium"
                                android:paddingHorizontal="20dp"
                                android:paddingTop="10dp"
                                android:paddingBottom="30dp"
                                android:text="Program Preview"
                                android:textColor="#FFFFFF"
                                android:textSize="12sp"
                                android:elevation="4dp"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:background="@drawable/input_field"
                                android:elevation="4dp">

                                <TextView
                                    android:id="@+id/tvListLineNumberProgramPreview"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="5dp"
                                    android:elevation="4dp"
                                    android:fontFamily="@font/msmedium"
                                    android:minHeight="250dp"
                                    android:paddingVertical="10dp"
                                    android:textColor="#0094EF"
                                    android:textSize="12sp"/>

                                <TextView
                                    android:id="@+id/tvListProgramPreview"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:elevation="4dp"
                                    android:fontFamily="@font/msmedium"
                                    android:minHeight="250dp"
                                    android:paddingVertical="10dp"
                                    android:textColor="#777777"
                                    android:textSize="12sp"/>

                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_weight="1">

                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_marginVertical="8dp"
                                android:layout_marginHorizontal="8dp"
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:background="@drawable/bg_btn"
                                android:text="Remove"
                                android:textColor="#FFFFFF"
                                android:textAllCaps="false"
                                android:fontFamily="@font/msmedium"
                                android:textSize="12sp"
                                android:foreground="@drawable/btn_ripple_effect"
                                android:clickable="true"
                                android:focusable="true" />

                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_marginVertical="8dp"
                                android:layout_marginHorizontal="8dp"
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:background="@drawable/bg_btn"
                                android:text="Edit"
                                android:textColor="#FFFFFF"
                                android:textAllCaps="false"
                                android:fontFamily="@font/msmedium"
                                android:textSize="12sp"
                                android:foreground="@drawable/btn_ripple_effect"
                                android:clickable="true"
                                android:focusable="true" />

                            <Button
                                android:id="@+id/btnUsePlan"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_marginVertical="8dp"
                                android:layout_marginLeft="8dp"
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:background="@drawable/bg_btn"
                                android:text="Use"
                                android:textColor="#FFFFFF"
                                android:textAllCaps="false"
                                android:fontFamily="@font/msmedium"
                                android:textSize="12sp"
                                android:foreground="@drawable/btn_ripple_effect"
                                android:clickable="true"
                                android:focusable="true" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>