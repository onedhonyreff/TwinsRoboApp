<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llFrameImageMateri"
    android:layout_width="120dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:elevation="3dp"
    android:layout_margin="5dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <ImageView
        android:id="@+id/ivImageMateri"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:adjustViewBounds="true"
        android:src="@drawable/gambar_materi_dummy_1"/>

    <TextView
        android:id="@+id/tvTitleImageMateri"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textSize="12sp"
        android:textColor="#888888"
        android:fontFamily="@font/mssemibold"
        android:text="Pengenalan Fungsi Robot"
        android:textAlignment="center"/>

</LinearLayout>